{
  "manifest_version": 3,
  "name": "Tesla AutoPilot Enhanced",
  "description": "Track Tesla inventory under your price target, auto-fill checkout forms, and auto-fill ZIP code dialogs on inventory pages.",
  "version": "1.6.0",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "128": "icons/science.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "128": "icons/science.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "alarms",
    "notifications",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "https://www.tesla.com/*",
    "https://static-assets-pay.tesla.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.tesla.com/inventory/*",
        "https://www.tesla.com/checkout/*",
        "https://www.tesla.com/myorder/*",
        "https://www.tesla.com/my/order/*",
        "https://www.tesla.com/tr_TR/inventory/*",
        "https://www.tesla.com/tr_TR/myorder/*"
      ],
      "js": ["content/content-helper.js", "content/inject.js"],
      "css": ["style.css"],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": [
        "https://static-assets-pay.tesla.com/*"
      ],
      "js": ["content/payment-frames.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "options_page": "options/options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "style.css", 
        "content/inject.js",
        "content/payment-frames.js",
        "shared/*.js"
      ],
      "matches": [
        "https://www.tesla.com/*", 
        "https://static-assets-pay.tesla.com/*"
      ]
    }
  ]
}